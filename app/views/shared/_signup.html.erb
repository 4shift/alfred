<!-- BEGIN: CONTENT/USER/SIGNUP-FORM -->
<div class="modal fade c-content-login-form" id="signup-form" role="dialog">
	<div class="modal-dialog">
		<div class="modal-content c-square">
			<div class="modal-header c-no-border">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			</div>
			<div class="modal-body">
				<h3 class="c-font-24 c-font-sbold">회원가입</h3>
        <%= form_for(@signup, url: accounts_path) do |f| %>
					<div class="form-group">
            <%= f.label :name, class: 'hide' %>
            <%= f.text_field :name, required: true, class: 'form-control input-lg c-square', placeholder: t('account.username') %>
					</div>
					<div class="form-group">
            <%= f.label :email, class: 'hide' %>
            <%= f.email_field :email, required: true,  class: 'form-control input-lg c-square', placeholder: t('account.email') %>
					</div>
					<div class="form-group">
            <%= f.label :password, class: 'hide' %>
            <%= f.password_field :password, required: true, class: 'form-control input-lg c-square', placeholder: t('account.password') %>
					</div>
					<div class="form-group">
            <%= f.label :password_confirmation, class: 'hide' %>
            <%= f.password_field :password_confirmation, required: true, class: 'form-control input-lg c-square', placeholder: t('account.password_confirmation') %>
					</div>
					<div class="form-group">
            <%= f.label :subdomain, class: 'hide' %>
            <%= f.text_field :subdomain, required: true, class: 'form-control input-lg c-square', placeholder: t('account.subdomain') %>
					</div>
					<div class="form-group">
            <%= f.submit t("account.create"), class: 'btn c-theme-btn btn-md c-btn-uppercase c-btn-bold c-btn-square c-btn-login' %>
					</div>
        <% end %>
			</div>
		</div>
	</div>
</div>
<!-- END: CONTENT/USER/SIGNUP-FORM -->
