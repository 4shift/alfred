<div class="attachable">
  <ul data-attachments>
    <%= f.fields_for :attachments, f.object.attachments do |ff| %>
      <%= render 'attachments/form_row', f: ff %>
    <% end %>
  </ul>

  <% params = { reply: true } if f.object.is_a?(Reply) %>
  <%= link_to new_attachment_path(params), remote: true do %>
		<i class="fa fa-paperclip"></i>
		<%= t(:attach_files) %>
	<% end %>
</div>
