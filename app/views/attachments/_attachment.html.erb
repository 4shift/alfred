<li class="attachment">
  <% if attachment.thumbnail? %>
    <a href="<%= attachment.file.url %>" class="fancybox" rel="gallery-<%= attachment.attachable.id %>">
      <img src="<%= attachment.file.url(:thumb) %>" />
    </a>
  <% end %>
  <strong class="name"><%= attachment.file_file_name %></strong>
  <span class="size"><%= number_to_human_size(attachment.file.size()) %> &middot; <%= link_to t(:download), attachment.file.url %></span>
</li>
